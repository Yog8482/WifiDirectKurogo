<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp" >

    <TextView
        android:id="@+id/contentNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:text="jp.ac.tuat.cs.wifidirectkurogo.message.HelloContent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/toTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contentNameTextView"
        android:layout_margin="2dp"
        android:text="to=(flooding)"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contentNameTextView"
        android:layout_margin="2dp"
        android:text="2013/01/03 06:55:32"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/fromTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentNameTextView"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/toTextView"
        android:text="from=Nexus7beta, GalaxyNexus"
        android:textColor="#666666"
        android:textSize="12sp" />

</RelativeLayout>