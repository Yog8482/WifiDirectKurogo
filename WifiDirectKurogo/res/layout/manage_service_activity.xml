<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/horz_center"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_centerVertical="true" />

    <fragment
        android:id="@+id/settingFragment"
        android:name="jp.ac.tuat.cs.wifidirectkurogo.DeviceSettingFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/horz_center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:tag="device_setting" />

    <fragment
        android:id="@+id/flowFragment"
        android:name="jp.ac.tuat.cs.wifidirectkurogo.MessageFlowFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/horz_center"
        android:tag="message_flow" />

</RelativeLayout>