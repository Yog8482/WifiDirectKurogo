<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp" >

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:text="Nexus7alpha"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameTextView"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/authCheckBox"
        android:gravity="center_vertical"
        android:text="AVAILABLE"
        android:textSize="14sp"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/authCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nextMACAddressTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/macAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_below="@+id/nameTextView"
        android:layout_margin="2dp"
        android:text="30:2a:90:03:30:2a:90:03"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hostAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/macAddressTextView"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/nameTextView"
        android:gravity="center_vertical"
        android:text="192.168.0.1"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/nextMACAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/macAddressTextView"
        android:layout_alignBottom="@+id/macAddressTextView"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/authCheckBox"
        android:text="Next:30:2a:90:03:30:2a:90:03"
        android:textColor="#666666"
        android:textSize="12sp" />

</RelativeLayout>